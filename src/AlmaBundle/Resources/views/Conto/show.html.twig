{% extends '::base.html.twig' %}

{% block body -%}
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN PAGE TITLE & BREADCRUMB-->
            <h3 class="page-title">
                Mostra conto					<small>pagina di dettagli per il conto</small>
            </h3>
            <ul class="page-breadcrumb breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="index.html">Home</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li><a href="{{ path('conto') }}">Conto</a><i class="fa fa-angle-right"></i></li>
                <li><a href="#">Mostra</a></li>
                <li class="pull-right">
                    <div id="dashboard-report-range" class="dashboard-date-range tooltips" data-placement="top" data-original-title="Change dashboard date range">
                        <i class="fa fa-calendar"></i>
                        <span></span>
                        <i class="fa fa-angle-down"></i>
                    </div>
                </li>
            </ul>
            <!-- END PAGE TITLE & BREADCRUMB-->
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <div class="portlet">
                <div class="portlet-body">
                    <div class="table-toolbar">
                        <div class="btn-group">
                            <a href="{{ path('conto_edit', { 'id': entity.id }) }}"><button id="gestore-dettaglio_edit" class="btn purple"><i class="fa fa-edit"></i>
                                </button>
                            </a>
                            <a href="{{ path('conto_delete', { 'id': entity.id }) }}" data-confirm="Confermi?" data-target="#dataConfirmModal" data-toggle="modal"><button id="gestore-dettaglio_delete" class="btn red"><i class="fa fa-trash-o"></i>
                                </button>
                            </a>
                        </div>
                    </div>
                    <table class="table table-striped table-hover table-bordered" id="tipovocespesa-dettaglio">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ entity.id }}</td>
                        </tr>
                        <tr>
                            <th>Stato</th>
                            <td>{{ entity.stato }}</td>
                        </tr>
                        <tr>
                            <th>Data Apertura</th>
                            <td>{{ entity.dataApertura|date('Y-m-d H:i:s') }}</td>
                        </tr>
                        <tr>
                            <th>Data Pagamento</th>
                            <td>{{ entity.dataPagamento|date('Y-m-d H:i:s') }}</td>
                        </tr>
                        <tr>
                            <th>Saldo</th>
                            <td>{% if entity.saldo %} Si {% else %} No {% endif %}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    {{ pulsante_indietro() }}
{% endblock %}

